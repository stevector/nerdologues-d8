{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
             "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "^8.2",
        "drush/drush": "~8.0",
        "drupal/console": "~1.0",
        "drupal/address": "1.x-dev",
        "drupal/ctools": "3.x-dev",
        "drupal/devel": "1.x-dev",
        "drupal/ds": "^2.5",
        "drupal/layout_plugin": "1.x-dev",
        "drupal/pathauto": "1.x-dev",
        "drupal/token": "1.x-dev",
        "drupal/youtube": "1.x-dev",
        "drupal/remote_stream_wrapper": "^1.0",
        "drupal/page_manager": "1.x-dev",
        "drupal/migrate_tools": "^3.0",
        "drupal/migrate_upgrade": "^3.0",
        "drupal/migrate_plus": "^3.0",
        "drupal/paragraphs": "1.x-dev",
        "drupal/entity_reference_revisions": "1.x-dev",
        "drupal/panels": "3.x-dev",
        "drupal/rabbit_hole": "^1.0"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8",

        "drush-ops/behat-drush-endpoint": "*",
        "drupal/drupal-extension": "dev-master",
        "drupal/drupal-driver": "dev-master",


        "drupal/coder": "^8.2.0-beta1",
        "squizlabs/php_codesniffer": "2.0.*@dev",
        "knplabs/friendly-contexts": "^0.7.0"



    },
    "replace": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "code-sniff": [
            "phpcs --report=full --extensions=php,module,inc,theme,info --ignore=CachedHttpStreamWrapper.php --standard=vendor/drupal/coder/coder_sniffer/Drupal/ web/modules/custom",
            "phpcs --report=full --extensions=php,module,inc,theme,info --standard=vendor/drupal/coder/coder_sniffer/Drupal/ web/themes/custom"
        ],
        "unit-test": [
            "phpunit -c web/core/ --group=nerdcustom web/modules/custom/ -v"
        ],
        "circle-tests": [
            "@code-sniff",
            "@unit-test",
            "echo 'cURLing server because Behat tests fail without the server getting hit first'; curl $SERVER",
            "behat --config=tests/behat/behat-circle.yml tests/behat/features/clickdriving --strict"
        ],
        "rsync-down": [
            "rsync -rlvz --exclude 'advagg_*'  --exclude='twig_cache*' --size-only --ipv4 --progress -e 'ssh -p 2222' live.90be258b-259e-4ea9-b674-6a35e65cc86d@appserver.live.90be258b-259e-4ea9-b674-6a35e65cc86d.drush.in:code/sites/default/files/ web/sites/default/files/_from_d7/sites/default/files"
        ],
        "rsync-up": [
            "rsync -rlvz --exclude 'advagg_*' --exclude='twig_cache*'  --exclude='oembed' --exclude='php' --exclude='js' --exclude='styles' --size-only --ipv4 --progress -e 'ssh -p 2222' web/sites/default/files/_from_d7/sites/default/files/* --temp-dir=../tmp/ dev.75e82cc3-b2b2-4710-b22f-51216f1308a5@appserver.dev.75e82cc3-b2b2-4710-b22f-51216f1308a5.drush.in:files/_from_d7/sites/default/files"
        ],
        "rsync-files": [
            "@rsync-down",
            "@rsync-up"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/page_manager": {
                "tab fixer": "https://www.drupal.org/files/issues/2634276-pm-19.patch",
                "canonical paths": "https://www.drupal.org/files/issues/page_manager-fix-existing-route-defaults-2820218-4.patch"
            },
            "drupal/rabbit_hole": {
                "trusted": "https://www.drupal.org/files/issues/trusted-2843564-1.patch"
            }
        }
    },

    "drupal-scaffold": {
        "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
        "includes": [
            "sites/default/default.services.pantheon.preproduction.yml",
            "sites/default/settings.pantheon.php"
        ]
    }
}
